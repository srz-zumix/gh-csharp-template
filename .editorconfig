root = true

[*]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{sh}]
indent_size = 2
end_of_line = lf

[gh-csharp-template]
indent_size = 2
end_of_line = lf

[*.{sln,csproj}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 150

[{Makefile,GNUmakefile}]
indent_style = tab
end_of_line = lf
trim_trailing_whitespace = true

[*.{json}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 150
